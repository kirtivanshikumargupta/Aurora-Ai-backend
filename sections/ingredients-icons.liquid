<section class="section">
  <div class="container">
    <h2 class="section-title">Power Ingredients</h2>
    <div class="ingredients-grid">
      {% for block in section.blocks %}
        <article class="ingredient-item" {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 200 }}" alt="{{ block.settings.title | escape }}" loading="lazy" width="100" height="100">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg icon-svg' }}
          {% endif %}
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Ingredients with icons",
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {"type": "image_picker", "id": "image", "label": "Icon/image"},
        {"type": "text", "id": "title", "label": "Name", "default": "Bhringraj"},
        {"type": "textarea", "id": "text", "label": "Benefit", "default": "Strengthens roots and reduces breakage."}
      ]
    }
  ],
  "presets": [{"name": "Ingredients with icons", "blocks": [{"type": "ingredient"}, {"type": "ingredient"}, {"type": "ingredient"}]}]
}
{% endschema %}
