<section class="hero">
  <div class="container hero__grid">
    <div>
      <span class="badge">Bestseller</span>
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <div class="hero__cta-row">
        <a class="btn" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
        <div class="rating-stars" aria-label="Rated 4.8 out of 5">
          ★★★★★ <small>4.8/5 by 3,200+ women</small>
        </div>
      </div>
    </div>
    <div class="hero__image-wrap">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.image_alt | escape }}" loading="eager" width="800" height="800">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero banner",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Repair Hair Damage Naturally with SilkRoot"},
    {"type": "textarea", "id": "subheading", "label": "Subheading", "default": "Herbal Damage Repair Shampoo with natural oils for stronger roots, less hairfall, and salon-quality shine."},
    {"type": "image_picker", "id": "image", "label": "Hero image"},
    {"type": "text", "id": "image_alt", "label": "Image alt text", "default": "SilkRoot Herbal Damage Repair Shampoo bottle"},
    {"type": "url", "id": "cta_link", "label": "CTA link", "default": "/products/herbal-damage-repair-shampoo"},
    {"type": "text", "id": "cta_label", "label": "CTA label", "default": "Shop Now"}
  ],
  "presets": [{"name": "Hero banner"}]
}
{% endschema %}
